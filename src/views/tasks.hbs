<h3 class="text-center my-4">List Tasks</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Task Name</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Edit</th>
            <th scope="col">remove</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <th scope="row"></th>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{status}}</td>
            <td><button data-bs-toggle="modal" data-bs-target="#editTask{{@index}}"> <i class="fas fa-edit"></i></button>
            </td>
            <td><a href="/tasks/delete/{{_id}}?_method=DELETE"><i class="fas fa-trash-alt"></i> </a></td>
        </tr>
        {{>modal}}
        {{/each}}
    </tbody>

</table>